---
import Layout from '../components/Layout.astro';
import { IconSun, IconGithub, IconAstro, IconUser, IconBlog, IconHome } from '../components/icons';
import RoundIconButton from '../components/RoundIconButton.astro';
import SquareIconLink from '../components/SquareIconLink.astro';
import MainCard from 'src/components/MainCard.astro';
---

<Layout title="Welcome to Astro Neumorphism template">
	<main class="flex flex-col flex-wrap p-4 m-4 md:p-8 md:m-0 md:max-w-[75%] md:min-w-[75%] lg:max-w-[45%] lg:min-w-[45%] 2xl:max-w-[40%] 2xl:min-w-[40%] rounded-tr-2xl rounded-tl-lg rounded-b-lg bg-gradient-box-light shadow-sky-light dark:bg-box-dark dark:shadow-orange-dark w-fit">
		<div class="flex w-full relative mb-4">
			<div class="flex w-15 -top-5 sm:top-0 sm:w-fit absolute">
				<IconAstro />
			</div>
			<div class="flex flex-col self-end text-right ml-auto text-xl w-fit text-light-blue-dark dark:text-dark-blue-light">
				<h1 class="font-black leading-extra-loose md:text-3xl 2xl:text-4xl">Astro</h1>
				<h1 class="font-thin leading-extra-loose md:text-2xl 2xl:text-4xl">Neumorphismt</h1>
			</div>

			<div class="flex w-fit h-fit px-1.25 py-1.25 ml-4 2xl:ml-8 shadow-switcher rounded-2xl dark:bg-buttons-box-dark dark:shadow-box-dark-out">
				<div class="dark:shadow-buttons-box-dark rounded-2xl w-min flex sm:w-full px-3 py-3 h-fit">
					<RoundIconButton
						srOnly="Theme color switcher"
						type="button"
						onclick="window.toggleTheme()"
					>
						<IconSun />
					</RoundIconButton>
					<span class="mr-1 md:mr-4"></span>
					<SquareIconLink
						title="Link to pabloLC GitHub"
						href="https://github.com/paablolc/"
						target="_blank"
					>
						<IconGithub />
					</SquareIconLink>
				</div>
			</div>
		</div>
		<div class="p-2.5 my-4 shadow-up dark:shadow-box-dark dark:bg-box-dark w-full 2xl:mx-auto rounded-lg">
			<MainCard />
		</div>
		<div class="text-center">
			<h2 class="text-xl text-light-blue-dark md:text-2xl 2xl:text-4xl font-thin leading-tighter tracking-tighter dark:text-dark-blue-light">
				Your website with
			</h2>
			<!-- <h1 class="text-xl text-light-blue-light md:text-xl 2xl:text-2xl font-thin leading-tighter tracking-tighter dark:text-dark-blue-light">
				Your website with
			</h1> -->
		</div>

		<div class="flex flex-col grow p-2.5 my-4 shadow-box-down-light box-decoration-slice min-h-max h-max dark:shadow-box-dark dark:bg-box-dark w-full rounded-md">

		</div>

		<div class="flex self-end w-fit px-1.25 py-1.25 shadow-box-up rounded-2xl mt-auto dark:bg-box-dark dark:shadow-box-dark-out">
			<div class="dark:shadow-buttons-box-dark rounded-2xl w-full px-3 py-3">
				<RoundIconButton
					srOnly="hi hi"
					type="button"
				>
					<IconHome />
				</RoundIconButton>
				<RoundIconButton
					srOnly="hi hi"
					type="button"
				>
					<IconBlog />
				</RoundIconButton>
				<RoundIconButton
					srOnly="hi hi"
					type="button"
				>
					<IconUser />
				</RoundIconButton>
			</div>
		</div>
	</main>
</Layout>

