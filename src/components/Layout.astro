---
import Technologies from "./Technologies.astro";
import { IconSun, IconGithub, IconAstro, IconUser, IconBlog, IconHome } from '../components/icons';
import RoundIconButton from "./RoundIconButton.astro";
import MainCard from "./MainCard.astro";
import SquareIconLink from "./SquareIconLink.astro";

export interface Props {
	title: string;
}

const { title } = Astro.props as Props;
---

<!DOCTYPE html>
<html lang="en">

<head>
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width">
	<link rel="icon" type="image/x-icon" href="/favicon.ico" />
	<link rel="stylesheet" href="../src/styles/base.css" />
	<title>{title}</title>
</head>

<body
	class="flex flex-col items-center justify-center relative box-border overflow-hidden min-h-screen bg-light-primary dark:bg-gradient-main-dark">
	<Technologies />
	<main
		class="flex flex-col flex-wrap p-4 m-4 md:p-8 md:m-0 md:max-w-[75%] md:min-w-[75%] lg:max-w-[45%] lg:min-w-[45%] 2xl:max-w-[40%] 2xl:min-w-[40%] rounded-tr-2xl rounded-tl-lg rounded-b-lg bg-gradient-box-light shadow-sky-light dark:bg-box-dark dark:shadow-orange-dark w-fit h-[calc(100vh_-_80px)] justify-between">
		<div class="flex w-full relative mb-6">
			<div class="flex w-15 -top-5 sm:top-0 sm:w-fit absolute">
				<IconAstro />
			</div>
			<div
				class="flex flex-col self-end text-right ml-auto text-xl w-fit text-light-blue-dark dark:text-dark-blue-light">
				<h1 class="font-black leading-extra-loose md:text-3xl 2xl:text-4xl">Astro</h1>
				<h1 class="font-thin leading-extra-loose md:text-2xl 2xl:text-4xl">Neumorphismt</h1>
			</div>

			<div
				class="flex w-fit h-fit px-1.25 py-1.25 ml-4 2xl:ml-8 shadow-switcher rounded-2xl dark:bg-buttons-box-dark dark:shadow-box-dark-out">
				<div class="dark:shadow-buttons-box-dark rounded-2xl w-min flex sm:w-full px-3 py-3 h-fit">
					<RoundIconButton srOnly="Theme color switcher" type="button" onclick="window.toggleTheme()">
						<IconSun />
					</RoundIconButton>
					<span class="mr-1 md:mr-4"></span>
					<SquareIconLink title="Link to pabloLC GitHub" href="https://github.com/paablolc/" target="_blank">
						<IconGithub />
					</SquareIconLink>
				</div>
			</div>
		</div>
		<slot />

		<div
			class="flex self-end w-fit px-1.25 py-1.25 shadow-box-up rounded-2xl dark:bg-box-dark dark:shadow-box-dark-out">
			<div class="dark:shadow-buttons-box-dark rounded-2xl w-full px-3 py-3">
				<SquareIconLink title="Go to the home page" target="_self" href='/'>
					<IconHome />
				</SquareIconLink>
				<SquareIconLink title="Go to post list page" target="_self" href='/postlist'>
					<IconBlog />
				</SquareIconLink>
				<SquareIconLink title="Go to about me page" target="_self" href='/aboutme'>
					<IconUser />
				</SquareIconLink>
			</div>
		</div>
	</main>
	
</body>

</html>


<script is:inline>

	const toggleTheme = () => {
		document.documentElement.classList.toggle('dark');
		localStorage.theme = document.documentElement.classList.contains('dark') ? 'dark' : 'light'
	}

	window.toggleTheme = toggleTheme;

	if (localStorage.theme === 'dark') {
		document.documentElement.classList.add('dark')
	} else {
		document.documentElement.classList.remove('dark')
	}

</script>

